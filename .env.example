# Backend Environment Variables
NODE_ENV=production
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/rdjcustoms

# JWT Secrets
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# Frontend URL
FRONTEND_URL=https://rdjcustoms-frontend.onrender.com
CORS_ORIGINS=https://rdjcustoms-frontend.onrender.com

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox

# Cryptocurrency Payments
BLOCKONOMICS_API_KEY=your-blockonomics-api-key
GLOBEE_API_KEY=your-globee-api-key
GLOBEE_SECRET=your-globee-secret

# AWS Configuration (for SES email)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-2

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Frontend Environment Variables (for Vite)
VITE_API_BASE_URL=https://rdjcustoms-api.onrender.com
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id
